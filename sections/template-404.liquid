<div class="max-w-md">
    <div class="text-5xl font-bold my-4">{{ section.settings.title }}</div>
    <div class="my-4">
        <p class="text-base md:text-xl leading normal ">{{ section.settings.subtext_title }}</p>
    </div>
    <div class="my-5">
        {% if section.settings.button_url == blank %}
            {% assign shop_url = shop.secure_url %}
            {% else %}
                {% assign shop_url = section.settings.button_url %}
        {% endif %}
        <a href="{{ shop_url }}" class="flex px-2  py-2 text-base font-bold shadow bg-gray-400  hover:bg-gray-600 text-white justify-center rounded-sm">{{ section.settings.button_label }}</a>
    </div>
</div>


{% schema %}
    {
        "name": "Template 404",
        "tag": "section",
        "class": "flex items-center justify-center text-center py-7 h-screen ",
        "settings": [
            {
                "type": "text",
                "id": "title",
                "default": "404",
                "label": "404 Heading Title"
            },
            {
                "type": "text",
                "id": "subtext_title",
                "default": "The page that you're looking for is not found.",
                "label": "404 Subtext Title"
            },
            {
                "type": "text",
                "id": "button_label",
                "default": "Back to Homapage",
                "label": "Button Label"
            },
            {
            "type": "url",
            "id": "button_url",
            "label": "Button URL"
            }
        ]
    }
{% endschema %}

